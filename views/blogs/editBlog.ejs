<% include ../partials/header2%>
<section class="section-edit-blog-post">
  <div class="row">
    <div class="row">
        <h2>Edit:- <%= blog.title %></2>
    </div>
    <div class="div-centered">
      <form  action="/becepastquestions/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label>Title</label>
          <input type="text" class="form-control" name = "blog[title]" value="<%=blog.title %>">
        </div>
        <div class="form-group">
          <label>Image</label>
          <input type="text" class="form-control" name="blog[image]" value="<%=blog.image %>">
        </div>
        <div class="form-group">
            <label>Blog Content</label>
            <textarea name="blog[body]" id="text-area" cols="59" rows="15"><%=blog.body%></textarea>
        </div>
        <input type="submit" class="btn  btn-primary " value="Submit">
      </form>
        <a href="/becepastquestions/blogs/<%=blog._id%>">Go Back</a>
    </div>
  </div>
</section>
