<% include ../partials/header2 %>
  <div class="row">
    <br>
    <br>
    <div class="row">
      <h2>Create New Blog</h2>
    </div>
    <div class="div-centered">
          <form  action="/becepastquestions/blogs/new" method="POST">
            <div class="form-group">
              <label>Title</label>
              <input type="text" class="form-control" name = "blog[title]" placeholder="title">
            </div>
            <div class="form-group">
              <label>Image</label>
              <input type="text" class="form-control" name="blog[image]" placeholder="image url">
            </div>
            <div class="form-group">
                <label>Blog Content</label>
                <textarea name="blog[body]" id="text-area" cols="60" rows="15"></textarea>
            </div>
            <div class="form-group">
              <input type="submit" class="form-control btn-primary " value="Submit">
            </div>
          </form>
    </div>
  </div>
