<% include ./partials/header2 %>
<div class="row">
    <div class="col-centered">
        <div class="group">
            <h2>Login</h2>
        </div>
    <% include ./partials/messages %>
        <form action="/login" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="username" value="<%= typeof name != 'undefined' ? name : '' %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="password" value="<%= typeof password != 'undefined' ? password : '' %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary form-control">Submit</button>
            </div>
            <div>
                <p style="text-align:center;">OR</p>
                <a id="sign-up" href="/register">sign up</a>
                <a id="forgot-pw" href="/forgot">forgot password?</a>
            </div>
        </form>
    </div>
</div>
<% include ./partials/footer_2%>
