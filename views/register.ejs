<% include ./partials/header2 %>
<div class="row">
    <div class="col-centered">
        <div class="row">
            <h2>Sign Up</h2>
        </div>
        <% include ./partials/messages %>
        <form action="/register" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="username" required value="<%= typeof username != 'undefined' ? username : '' %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="password" required value="<%= typeof email != 'undefined' ? password : '' %>">
                <label for="password" style="font-size: 14px; color: #ee4c4c;">*password should be at least six characters long</label>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password2" placeholder="Confirm password" required value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="email" name="email" placeholder="email" required value="<%= typeof email != 'undefined' ? email: '' %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="avatar" placeholder="avatar url (optional)" value="<%= typeof avatar != 'undefined' ? avatar: '' %>">
            </div>
            <div class="form-group">
                    <input class="form-control" type="text" name="adminCode" placeholder="admin code (skip if you're not admin)" value="<%= typeof adminCode  != 'undefined' ? adminCode : '' %>">
                </div>
            <div class="form-group">
                <button class="btn btn-primary form-control">Submit</button>
            </div>
        </form>
    </div>
</div>

<% include ./partials/footer %>
